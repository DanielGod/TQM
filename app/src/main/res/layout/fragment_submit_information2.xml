<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            >
            <ImageView
                android:layout_width="@dimen/mediumxhdp"
                android:layout_height="@dimen/mediumxhdp"
                android:src="@drawable/qloan_one_dark_img"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/tinymdp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bigxmdp"
                    android:text="信息提交成功"
                    android:textSize="@dimen/mediumsp"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="审核需要1-2小时"
                    android:textSize="@dimen/smallsp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="审核通过之后信贷经理或与您直接联系"
                    android:textSize="@dimen/smallsp"
                    />

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:id="@+id/submit_two_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"


                >
                <ImageView
                    android:layout_width="@dimen/mediumxhdp"
                    android:layout_height="@dimen/mediumxhdp"
                    android:src="@drawable/qloan_two_dark_img"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/tinymdp"
                    >
                    <TextView
                        android:id="@+id/submit_two_top_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bigxmdp"
                        android:text="信息提交成功 已发布"
                        android:textSize="@dimen/mediumsp"
                        android:textColor="@color/red"
                        />
                    <TextView
                        android:id="@+id/submit_two_down_tv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="24小时内铜钱猫将推荐优秀业务员贷款人员联系你"
                        android:textSize="@dimen/smallsp"
                        android:lines="2"
                        />

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/submit_three_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"

                >
                <ImageView
                    android:layout_width="@dimen/mediumxhdp"
                    android:layout_height="@dimen/mediumxhdp"
                    android:src="@drawable/qloan_three_dark_img"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/tinymdp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bigxmdp"
                        android:text="信息已通知相关信贷经理，请保持电话畅通"
                        android:textSize="@dimen/smallsp"
                        />
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:background="@drawable/apply_for_selector"
        android:layout_margin="@dimen/smallmdp"
        android:text="继续编辑"
        android:textSize="@dimen/mediumxsp"
        android:textColor="@drawable/apply_for_text_color_selector"
        />



</LinearLayout>