<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/whitesmoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/company_apply_for_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehdp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:minHeight="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediummdp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehdp"
                android:orientation="vertical"
                android:gravity="bottom">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/mediummdp"
                        android:layout_marginTop="@dimen/mediummdp"
                        android:src="@drawable/ic_company_name"
                        />
                    <TextView
                        android:layout_width="@dimen/hugehxxxdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="公司名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"
                        android:paddingLeft="@dimen/smallmdp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/bigmdp"
                        android:layout_gravity="center"
                        android:background="@color/whitesmoke"
                        />

                    <EditText
                        android:id="@+id/apply_for_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/mediumxsp"
                        android:textColor="@color/black"
                        android:hint="请输入公司名称"
                        android:lines="1"
                        android:inputType="text"
                        android:textColorHint="@color/gary"
                        android:paddingLeft="@dimen/mediummdp"
                        />
                    
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/whitesmoke"/>
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehdp"
                android:orientation="vertical"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/mediummdp"
                        android:layout_marginTop="@dimen/mediummdp"
                        android:src="@drawable/ic_company_img"
                        />
                    <TextView
                        android:layout_width="@dimen/hugehxxxdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="营业执照"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"
                        android:paddingLeft="@dimen/smallmdp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/bigmdp"
                        android:layout_gravity="center"
                        android:background="@color/whitesmoke"
                        />

                    <TextView
                        android:id="@+id/apply_for_add_img_result_txt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="未添加"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/mediumxsp"
                        android:paddingLeft="@dimen/smallmdp"
                        />

                    <TextView
                        android:id="@+id/apply_for_add_img_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_add_img"
                        android:layout_gravity="right"
                        android:text="添加照片"
                        android:textColor="@color/gary_dark"
                        android:drawablePadding="@dimen/tinymdp"
                        android:paddingRight="@dimen/smallmdp"
                        android:textSize="@dimen/mediumxsp"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/whitesmoke"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehdp"
                android:orientation="vertical"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/mediummdp"
                        android:layout_marginTop="@dimen/mediummdp"
                        android:src="@drawable/ic_company_user"
                        />
                    <TextView
                        android:layout_width="@dimen/hugehxxxdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="联系人"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"
                        android:paddingLeft="@dimen/smallmdp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/bigmdp"
                        android:layout_gravity="center"
                        android:background="@color/whitesmoke"
                        />

                    <EditText
                        android:id="@+id/apply_for_company_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/mediumxsp"
                        android:textColor="@color/black"
                        android:hint="请输入联系人"
                        android:lines="1"
                        android:inputType="text"
                        android:textColorHint="@color/gary"
                        android:paddingLeft="@dimen/mediummdp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/whitesmoke"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehdp"
                android:orientation="vertical"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/mediummdp"
                        android:layout_marginTop="@dimen/mediummdp"
                        android:src="@drawable/ic_company_phone"
                        />
                    <TextView
                        android:layout_width="@dimen/hugehxxxdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="联系电话"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"
                        android:paddingLeft="@dimen/smallmdp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/bigmdp"
                        android:layout_gravity="center"
                        android:background="@color/whitesmoke"
                        />

                    <EditText
                        android:id="@+id/apply_for_company_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/mediumxsp"
                        android:textColor="@color/black"
                        android:hint="请输入联系电话"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:textColorHint="@color/gary"
                        android:paddingLeft="@dimen/mediummdp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/whitesmoke"/>

            </LinearLayout>

            <Button
                android:id="@+id/apply_for_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_margin="@dimen/mediummdp"
                android:text="提交"
                android:textSize="@dimen/bigsp"
                android:textColor="@drawable/apply_for_text_color_selector"
                android:background="@drawable/apply_for_selector"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_apply_for_bottom"
                android:layout_alignParentBottom="true"
                />
        </LinearLayout>




    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/loding_lin"
        android:background="@color/transparent"
        >
        <include layout="@layout/fragment_loding"/>
    </LinearLayout>
</RelativeLayout>