<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/whitesmoke"
              android:id="@+id/root_lin"
              android:visibility="visible"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/info_header_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/hugehxxdp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:src="@drawable/ic_user_head_img"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="@dimen/smallmdp">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="金星金融理财贷款"
                android:textColor="@color/font_black_1"
                android:textSize="@dimen/mediumxsp"
                />

            <TextView
                android:id="@+id/profile_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="简介：djaldjlanfkjfasdfasdfasdsndnalsndlask"
                android:textColor="@color/font_black_2"
                android:textSize="@dimen/mediumsp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/call_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummdp"
                        android:layout_marginTop="@dimen/mediummdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_call"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        android:text="呼叫"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/collection_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/tinyhdp"
                    android:layout_weight="0.7"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/tinymdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_collection"/>

                    <TextView
                        android:id="@+id/is_collect_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        android:text="未收藏"
                        android:textColor="@color/cube_holo_orange_light"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediummdp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/phone_num_lin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"

            >

            <ImageView
                android:layout_width="@dimen/bigmdp"
                android:layout_height="@dimen/bigmdp"
                android:layout_marginBottom="@dimen/mediummdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_phone_circle"/>

            <TextView
                android:id="@+id/phone_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mediummdp"
                android:text="电话：1312312312423"
                android:textColor="@color/font_black_2"
                android:textSize="@dimen/smallsp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            >

            <ImageView
                android:layout_width="@dimen/bigmdp"
                android:layout_height="@dimen/bigmdp"
                android:layout_marginBottom="@dimen/mediummdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_address_circle"/>

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mediummdp"
                android:text="地址：上海市浦东区艾付广场1楼88层"
                android:textColor="@color/font_black_2"
                android:textSize="@dimen/smallsp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mediummdp"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:id="@+id/more_profile_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/mediummdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_more_profile"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="公司介绍"
                android:paddingLeft="@dimen/mediummdp"
                android:textColor="@color/font_black_2"
                android:textSize="@dimen/smallsp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right_arrow"
                />
        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:background="@color/white"
        />



</LinearLayout>
