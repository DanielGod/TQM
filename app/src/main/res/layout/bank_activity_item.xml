<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hugehxxxdp"
              android:layout_margin="@dimen/smallmdp"
              android:orientation="vertical"
              android:background="@color/white"

    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whitesmoke"
        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:paddingLeft="@dimen/smallmdp"
        >
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banklogo"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/mediummxdp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/activityTitle_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/sty_title_tv"
                android:lines="2"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/smallmdp"
                android:text="宋江支行年收益4.5%，起购5000元oooooo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/institutionName_tv"
                        style="@style/listitemLayout_tv"
                        android:textSize="@dimen/tinysp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/listitemLayout_tv"
                        android:textSize="@dimen/tinysp"
                        android:text="阅读"
                        android:paddingRight="3dp"
                        />
                    <TextView
                        android:id="@+id/activityViews_tv"
                        style="@style/listitemLayout_tv"
                        android:textSize="@dimen/tinysp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>