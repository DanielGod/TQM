<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehdp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <!--<include layout="@layout/fragment_loding"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/d1"
        android:orientation="vertical"
        >

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"

                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_phone"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="电话"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/phone_num_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="电话"
                    android:inputType="phone"
                    android:maxLines="11"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_name"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:text="姓名"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/company_user_name_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="姓名"
                    android:inputType="textPersonName"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--申请城市-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_city"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="申请城市"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/quickLoan_choiceProvince_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="选择省"
                    style="@style/apply_edi"
                    android:digits=""
                    android:focusableInTouchMode="false"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/quickLoan_choiceCity_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="选择市"
                    style="@style/apply_edi"
                    android:visibility="invisible"
                    android:digits=""
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <!--贷款金额-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_loanmoney"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="贷款金额"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(万)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/quick_loan_money_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="numberDecimal"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--贷款期限-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_loantime"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="贷款期限"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(月)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/loanTerm_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:maxLines="9"
                    android:inputType="number"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--贷款期限-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_loantime"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/loan_use"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/loanUse_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="text"
                    android:hint="最多输入10个字"
                    android:maxLength="10"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--职业身份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_identy"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="职业身份"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/quickLoan_choiceIdentity_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="上班族"
                    style="@style/apply_edi"
                    android:digits=""
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <!--税后月薪-->
            <LinearLayout
                android:id="@+id/quickLoan_monthMoney_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mediumhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:visibility="gone"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_prosionmoney"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="税后月薪"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(元)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/quickLoan_monthMoney_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="number"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--公司所在地址-->
            <LinearLayout
                android:id="@+id/quickLoan_companyAddress_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mediumhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:visibility="gone"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_user"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="公司名称"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/quickLoan_companyAddress_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="请输入公司名称"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--公司流水-->
            <LinearLayout
                android:id="@+id/quickLoan_companyMoney_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mediumhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:visibility="gone"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_prosionmoney"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="公司流水"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(元)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/quickLoan_companyMoney_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
android:inputType="number"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--收入-->
            <LinearLayout
                android:id="@+id/quickLoan_persionMoney_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mediumhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:visibility="gone"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_loan_prosionmoney"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="年收入"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(万)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/quickLoan_persionMoney_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:maxLines="9"
                    android:inputType="number"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mediumhdp"
                android:background="@drawable/apply_for_selector"
                android:layout_margin="@dimen/smallmdp"
                android:text="下一步"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@drawable/apply_for_text_color_selector"
                />
        </LinearLayout>
</ScrollView>

</LinearLayout>