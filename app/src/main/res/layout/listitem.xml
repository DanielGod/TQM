<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:focusable="true"
              android:clickable="true"
              android:background="?android:selectableItemBackground"
              android:layout_height="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/annualReturn_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="4.0%"
            android:textSize="@dimen/bigsp"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal|bottom"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="年利率"
            android:gravity="center_horizontal|bottom"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:textSize="@dimen/mediumxsp"
                android:gravity="center_vertical"
                android:text="111111111111111"
                android:id="@+id/title_tv"/>

            <TextView
                android:id="@+id/institutionName_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:textSize="@dimen/mediumsp"
                android:gravity="center_vertical"
                android:text="111111111111111"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/riskGradeName_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="中等"
                />
            <TextView
                android:id="@+id/investmentTerm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="36期"
                />
            <TextView
                android:id="@+id/loanMoney_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="最高贷款20万"
                />
            <TextView
                android:id="@+id/purchaseMoney_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="起购金额"
                />
            <TextView
                android:id="@+id/financViews_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="浏览量"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>