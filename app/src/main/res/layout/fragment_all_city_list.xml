<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/toast_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门"
        android:textColor="@color/white"
        android:textSize="@dimen/super_big"
        android:layout_centerInParent="true"
        android:background="#aa333333"
        android:padding="@dimen/mediummxdp"
        android:visibility="invisible"
        />
    <tqm.bianfeng.com.tqm.CustomView.SideBar
        android:id="@+id/all_city_sidebar"
        android:layout_width="@dimen/tinyhdp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>
</RelativeLayout>