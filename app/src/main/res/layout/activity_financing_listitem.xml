<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loan_listitem_cardview"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hugehxxxxxxxxxdp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    >
    <ImageView
        android:id="@+id/presaleStatus_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/img_financ_ks"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/smallmdp"
        >
        <!--title-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"

                >
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/mediummdp"
                    android:text="中国银行"
                    android:paddingLeft="@dimen/smallhdp"
                    android:gravity="center_vertical"
                    style="@style/sty_title_tv"
                    />

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/bigmdp"
            android:paddingBottom="@dimen/tinymdp"
            >
            <!--起购金额-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/purchaseMoney_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="起购金额"
                    style="@style/sty_listLab_tv"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purchaseMoney_lab"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/purchaseMoney_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/bigsp"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="@dimen/bigsp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/orange_light"
                android:layout_marginRight="@dimen/tinymdp"
                android:layout_marginLeft="@dimen/tinymdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:layout_marginBottom="@dimen/mediummdp"


                />
            <!--期限-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/investmentTerm_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="期限"
                    style="@style/sty_listLab_tv"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/investmentTerm_lab"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/investmentTerm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="365"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/bigsp"
                        />
                    <TextView
                        android:id="@+id/investmentTerm_day_unit_tv"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textSize="@dimen/bigsp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/orange_light"
                android:layout_marginRight="@dimen/tinymdp"
                android:layout_marginLeft="@dimen/tinymdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:layout_marginBottom="@dimen/mediummdp"

                />
            <!--利率-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/mediummdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_financing_cycle"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/annualReturn_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="4.8%"
                    android:textColor="@color/home_hotActivity_red"
                    android:textSize="@dimen/mediumxsp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/annualReturn_tv"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="预期年化"
                        android:textColor="@color/home_hotActivity_gray6"
                        android:textSize="@dimen/tinysp"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:paddingLeft="@dimen/smallhdp"
            android:layout_marginBottom="@dimen/mediummdp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/institutionIcon_img"
                android:layout_width="@dimen/bigxmdp"
                android:layout_height="@dimen/bigxmdp"
                android:src="@drawable/img_financing_institution"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/tinymdp"
                />
            <TextView
                android:id="@+id/institutionName_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="中国工商银行"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>