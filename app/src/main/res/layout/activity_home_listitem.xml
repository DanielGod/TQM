<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_marginLeft="@dimen/smallmdp"
              android:layout_marginRight="@dimen/smallmdp"
              android:layout_marginTop="1dp"
              android:layout_height="200dp">
    <LinearLayout
        android:id="@+id/hotActivity_left_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="@dimen/tinymdp"
        android:paddingRight="@dimen/tinymdp"
        android:clickable="true"
        android:background="?selectableItemBackground"
        >
        <TextView
            android:id="@+id/hotActivity_left_tv"
           style="@style/hotActivity_title_tv"
            android:text="中信银行看大片"
           android:textSize="@dimen/mediumxsp"
            android:gravity="center"
            android:textColor="@color/home_hotActivity_orange"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关注有惊喜"
            android:textColor="@color/home_hotActivity_gray6"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hotactivity_1"
            android:layout_marginTop="@dimen/mediummxdp"
            />

    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/whitesmoke"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/hotActivity_rightUp_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?selectableItemBackground"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:id="@+id/hotActivity_rightUp_tv"
                    style="@style/hotActivity_title_tv"
                    android:layout_marginTop="@dimen/bigxmdp"
                    android:layout_marginLeft="@dimen/bigxmdp"
                    android:text="中信银行看大片"
                    android:textSize="@dimen/mediumsp"
                    android:textColor="@color/home_hotActivity_blue"
                    />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotActivity_rightUp_tv"
                    android:layout_alignLeft="@id/hotActivity_rightUp_tv"
                    android:textColor="@color/home_hotActivity_gray6"
                    android:text="分享有惊喜"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enten"
                    android:layout_toRightOf="@id/tv2"
                    android:layout_alignBottom="@id/tv2"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="@dimen/tinymdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotactivity_2"
                    android:scaleType="centerInside"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:id="@+id/hotActivity_rightDown_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                >
                <TextView
                    android:id="@+id/hotActivity_rightDown_tv"
                    style="@style/hotActivity_title_tv"
                    android:layout_marginTop="@dimen/bigxmdp"
                    android:layout_marginLeft="@dimen/bigxmdp"
                    android:text="中信银行看大片"
                    android:textColor="@color/home_hotActivity_red"
                    />
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotActivity_rightDown_tv"
                    android:layout_alignLeft="@id/hotActivity_rightDown_tv"
                    android:text="宝宝你快来"
                    android:textColor="@color/home_hotActivity_gray6"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enten"
                    android:layout_toRightOf="@id/tv4"
                    android:layout_alignBottom="@id/tv4"
                    android:scaleType="centerInside"
                    android:paddingBottom="1dp"

                    android:layout_marginLeft="@dimen/tinymdp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hotactivity_3"
                    android:scaleType="centerInside"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>