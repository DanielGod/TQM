<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hugehxxxxxdp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/inin_lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/smallmdp">

        <ImageView
            android:id="@+id/inin_img"
            android:layout_width="@dimen/hugehxxxdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallmdp"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallmdp"
            android:background="@color/gray_light"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/smallmdp"
           >
            <!--律师-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1.5"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/ininName_txt"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:text="张律师"
                   android:lines="1"
                   android:ellipsize="end"
                   android:paddingRight="@dimen/smallmdp"
                   android:textColor="@color/black"
                   android:textSize="@dimen/mediumsp"/>
               <ImageView
                   android:id="@+id/type_img"
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_height="match_parent"
                   android:src="@drawable/ic_company1001"
                   android:layout_marginTop="@dimen/mediummdp"
                   android:layout_marginBottom="@dimen/mediummdp"
                   android:layout_marginRight="@dimen/activity_horizontal_margin"
                   android:scaleType="centerInside"
                   android:visibility="visible"
                   />
           </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/contact_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical"
                    android:text="联系电话：15670702651"
                    android:textColor="@color/font_black_2"
                    android:textSize="@dimen/mediumsp"
                    />

            </LinearLayout>
            <!--业务-->
            <LinearLayout
                android:id="@+id/law_business_linear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="业务:"
                    android:textColor="@color/home_hotActivity_gray6"
                    android:textSize="@dimen/smallsp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/profile_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/font_black_2"
                    android:textSize="@dimen/smallsp"
                    android:paddingRight="@dimen/smallmdp"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigxmdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/call_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/tinymdp"
                android:layout_marginBottom="@dimen/tinymdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/tinymdp"
                android:text="呼叫"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/smallsp"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tinymdp"
            android:layout_marginBottom="@dimen/tinymdp"
            android:background="@color/gray_light"
            />

        <LinearLayout
            android:id="@+id/collection_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/is_collect_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/tinymdp"
                android:layout_marginBottom="@dimen/tinymdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_heard_light"/>

            <TextView
                android:id="@+id/is_collect_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/tinymdp"
                android:text="收藏"
                android:textColor="@color/cube_holo_orange_light"
                android:textSize="@dimen/smallsp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallmdp"
        android:background="@color/gray_light"/>

</LinearLayout>