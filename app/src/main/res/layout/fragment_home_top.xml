<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/homeFragmentTop_spinner"
              android:orientation="vertical">

    <tqm.bianfeng.com.tqm.CustomView.MyScrollview
        android:id="@+id/my_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehxxxxxxxxxdp">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/home_slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehxxxxxxxxxdp"
                    android:background="@drawable/home_top_slider1"
                    app:auto_cycle="true"
                    />

                <tqm.bianfeng.com.tqm.CustomView.SliderBottomView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallmdp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehxxxxdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingBottom="@dimen/tinymdp"
                >

                <LinearLayout
                    android:id="@+id/home_bank_activity_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/mediummxdp"
                        android:paddingLeft="@dimen/mediummxdp"
                        android:paddingRight="@dimen/mediummxdp"
                        android:src="@drawable/ic_bank_activity"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/bankActivity"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/smallsp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/home_bank_make_money_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/mediummxdp"
                        android:paddingLeft="@dimen/mediummxdp"
                        android:paddingRight="@dimen/mediummxdp"
                        android:src="@drawable/ic_bank_make_money"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="银行理财"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/smallsp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_bank_loan_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/mediummxdp"
                        android:paddingLeft="@dimen/mediummxdp"
                        android:paddingRight="@dimen/mediummxdp"
                        android:src="@drawable/ic_bank_loan"
                        />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/bankloan"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/smallsp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_select_capital_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/mediummxdp"
                        android:paddingLeft="@dimen/mediummxdp"
                        android:paddingRight="@dimen/mediummxdp"
                        android:src="@drawable/ic_select_capital"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="民间资本"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/smallsp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_select_branches_lin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/mediummxdp"
                        android:paddingLeft="@dimen/mediummxdp"
                        android:paddingRight="@dimen/mediummxdp"
                        android:src="@drawable/jqqd"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="网点查询"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/smallsp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_info_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:adjustViewBounds="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_hot_msg"/>

                    <tqm.bianfeng.com.tqm.CustomView.MarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/tinymdp"
                        android:layout_marginTop="@dimen/tinymdp"
                        android:layout_weight="2.3"
                        app:mvAnimDuration="500"
                        app:mvInterval="9000"
                        app:mvTextColor="@color/black"
                        app:mvTextSize="@dimen/mediumsp"
                        />

                    <TextView
                        android:id="@+id/select_more_hot_information_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/tinymdp"
                        android:paddingRight="@dimen/tinymdp"
                        android:text="更多"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/smallsp"/>


                </LinearLayout>

                <!--极速贷款-->
                <LinearLayout
                    android:id="@+id/home_bank_loan_title_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        style="@style/home_bar_linear">

                        <TextView
                            style="@style/sty_home_title_line_tv"
                            />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mediummdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            />

                        <TextView
                            style="@style/sty_home_title_tv"
                            android:text="极速贷款"
                            />

                        <TextView
                            android:id="@+id/select_more_bankLoan_txt"
                            style="@style/sty_home_lookmore_tv"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/header_footer_top_bottom_padding"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/smallmdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_right_double"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_loan_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@android:color/white"
                        android:paddingRight="5dp">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <!--理财推荐-->
                <LinearLayout
                    android:id="@+id/home_bank_make_money_title_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        style="@style/home_bar_linear">

                        <TextView
                            style="@style/sty_home_title_line_tv"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mediummdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            />

                        <TextView
                            style="@style/sty_home_title_tv"
                            android:text="@string/bFinancalRecommendations"
                            />

                        <TextView
                            android:id="@+id/select_more_bankFinancing_txt"
                            style="@style/sty_home_lookmore_tv"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/header_footer_top_bottom_padding"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/smallmdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_right_double"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_finaning_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <!--热门活动-->
                <LinearLayout
                    android:id="@+id/home_bank_activity_title_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        style="@style/home_bar_linear">

                        <TextView
                            style="@style/sty_home_title_line_tv"
                            />


                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mediummdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            />

                        <TextView
                            style="@style/sty_home_title_tv"
                            android:text="热门活动"
                            />

                        <TextView
                            android:id="@+id/select_more_bankActivitys_txt"
                            style="@style/sty_home_lookmore_tv"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/header_footer_top_bottom_padding"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/smallmdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_right_double"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <include layout="@layout/activity_home_listitem"/>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_activitys_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        android:visibility="gone"
                        >

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        style="@style/home_bar_linear">

                        <TextView
                            style="@style/sty_home_title_line_tv"
                            />

                        <TextView
                            style="@style/sty_home_title_tv"
                            android:text="银行资讯"
                            />

                        <TextView
                            android:id="@+id/select_more_bank_make_money_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:clickable="true"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/smallmdp"
                            android:paddingRight="@dimen/smallmdp"
                            android:text="更多"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/smallsp"/>


                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_info_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white"
                        >
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </tqm.bianfeng.com.tqm.CustomView.MyScrollview>

</LinearLayout>