<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            >

            <com.daimajia.slider.library.SliderLayout
            android:id="@+id/home_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hugehxxxxxxxdp"
            app:auto_cycle="false"
            />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:padding="@dimen/smallmdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:background="@color/white"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:id="@+id/home_bank_activity_lin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/smallmdp"
                            android:src="@drawable/ic_bank_activity"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/smallmdp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="银行活动"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumsp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="投资良机不错过"
                                android:textColor="@color/gary_dark"
                                android:textSize="@dimen/smallsp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/whitesmoke"/>
                    <LinearLayout
                        android:id="@+id/home_bank_make_money_lin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/smallmdp"
                            android:src="@drawable/ic_bank_make_money"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/smallmdp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="银行理财"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumsp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="轻松随意攒钱"
                                android:textColor="@color/gary_dark"
                                android:textSize="@dimen/smallsp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp">

                    <LinearLayout
                        android:id="@+id/home_bank_loan_lin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/smallmdp"
                            android:src="@drawable/ic_bank_loan"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/smallmdp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="银行贷款"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumsp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="利率早知道"
                                android:textColor="@color/gary_dark"
                                android:textSize="@dimen/smallsp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/whitesmoke"/>
                    <LinearLayout
                        android:id="@+id/home_select_branches_lin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/smallmdp"
                            android:src="@drawable/ic_select_branches"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/smallmdp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="网点查询"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumsp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingLeft="@dimen/smallmdp"
                                android:text="投资良机不错过"
                                android:textColor="@color/gary_dark"
                                android:textSize="@dimen/smallsp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_info_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:visibility="invisible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.7"
                        android:background="@drawable/ic_hot_msg"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/tinymdp"
                        android:layout_marginBottom="@dimen/tinymdp"
                        android:paddingLeft="@dimen/smallmdp"
                        android:text="热点资讯"
                        android:textColor="@color/white"/>

                    <tqm.bianfeng.com.tqm.CustomView.MarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/smallmdp"
                        app:mvAnimDuration="1000"
                        app:mvInterval="3000"
                        app:mvTextColor="@color/colorPrimary"
                        app:mvTextSize="@dimen/mediumxsp"
                        />

                    <TextView
                        android:id="@+id/select_more_hot_information_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="更多"
                        android:textColor="@color/gary_dark"
                        android:textSize="@dimen/mediumsp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/activity_horizontal_margin"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right_double"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:scaleType="centerInside"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bank_hot_msg"
                        android:layout_margin="@dimen/mediummdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="银行资讯"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"/>

                    <TextView
                        android:id="@+id/select_more_bank_make_money_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="更多"
                        android:textColor="@color/gary_dark"
                        android:textSize="@dimen/mediumsp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/activity_horizontal_margin"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right_double"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bank_info_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="1dp"
                    android:layoutAnimation="@anim/layout_animation"
                    android:background="@android:color/white">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/home_bank_finaning"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="银行理财"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumxsp"/>

                    <TextView
                        android:id="@+id/select_more_bankFinancing_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="更多.."
                        android:textColor="@color/gary_dark"
                        android:paddingRight="@dimen/smallmdp"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>

                    <ListView
                        android:id="@+id/bank_finaning_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="1dp"
                        android:divider="@color/whitesmoke"
                        android:dividerHeight="1dp"
                        android:background="@android:color/white">

                    </ListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/smallhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/smallmdp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/smallmdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/home_bank_loan"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="银行贷款"
                            android:textColor="@color/black"
                            android:textSize="@dimen/mediumxsp"/>

                        <TextView
                            android:id="@+id/select_more_bankLoan_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="更多.."
                            android:textColor="@color/gary_dark"
                            android:paddingRight="@dimen/smallmdp"
                            android:textSize="@dimen/mediumsp"/>
                    </LinearLayout>

                    <ListView
                        android:id="@+id/bank_loan_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:divider="@color/whitesmoke"
                        android:dividerHeight="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white">

                    </ListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/smallhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/smallmdp"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/smallmdp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/home_bank_activitys"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="银行活动"
                            android:textColor="@color/black"
                            android:textSize="@dimen/mediumxsp"/>

                        <TextView
                            android:id="@+id/select_more_bankActivitys_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="更多.."
                            android:textColor="@color/gary_dark"
                            android:paddingRight="@dimen/smallmdp"
                            android:textSize="@dimen/mediumsp"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_activitys_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/white">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>