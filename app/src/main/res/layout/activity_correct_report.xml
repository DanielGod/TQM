<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/correct_report_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehdp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:layout_marginLeft="@dimen/smallmdp"
        android:layout_marginRight="@dimen/smallmdp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/write_radius_bg_shap"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="您要？"
            android:textSize="@dimen/mediumxsp"
            android:textColor="@color/font_black_1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/smallhdp"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/report_radio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorPrimary"
                android:text="举报"
                android:textColor="@color/font_black_1"
                android:textSize="@dimen/mediumsp"
                />
            <RadioButton
                android:id="@+id/correct_radio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorPrimary"
                android:text="纠错"
                android:textColor="@color/font_black_1"
                android:textSize="@dimen/mediumsp"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxdp"
        android:layout_marginLeft="@dimen/smallmdp"
        android:layout_marginRight="@dimen/smallmdp"
        android:layout_marginTop="@dimen/smallmdp"
        android:background="@drawable/write_radius_bg_shap"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bigmdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="@dimen/tinymdp"
                android:text="亲："
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="提交后我们会尽快核实，感谢您的支持"
            android:textSize="@dimen/smallsp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxxxxxdp"
        android:layout_marginLeft="@dimen/smallmdp"
        android:layout_marginRight="@dimen/smallmdp"
        android:layout_marginTop="@dimen/smallmdp"
        android:background="@drawable/write_radius_bg_shap"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/smallhdp"
            android:src="@drawable/ic_edi"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:paddingLeft="@dimen/smallmdp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/whitesmoke"/>

        <EditText
            android:id="@+id/feedback_txt_edi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/activity_horizontal_margin"
            android:hint="举报/纠错 内容"
            android:textColorHint="@color/gary_dark"
            android:background="#00000000"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumsp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:background="@drawable/apply_for_selector"
        android:layout_margin="@dimen/smallmdp"
        android:text="提交"
        android:textSize="@dimen/mediumxsp"
        android:textColor="@drawable/apply_for_text_color_selector"
        />

</LinearLayout>