<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@android:color/white">
    <!--我的界面-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxxxxxdp"
        android:background="@drawable/user_bg"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_circle_img"
            android:layout_width="@dimen/hugehdp"
            android:layout_height="@dimen/hugehdp"
            android:layout_above="@+id/user_register_phone_num_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/smallmdp"
            android:clickable="true"
            android:src="@drawable/ic_user"
            />

        <TextView
            android:id="@+id/user_register_phone_num_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:layout_above="@+id/user_login_registered_btn"
            android:layout_marginBottom="@dimen/smallmdp"
            android:gravity="center"
            android:text="15670702651"
            android:textColor="@android:color/black"
            android:textSize="@dimen/mediumxsp"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/user_phong_num_edi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:layout_above="@+id/user_login_registered_btn"
            android:layout_marginBottom="@dimen/smallmdp"
            android:layout_marginLeft="@dimen/tinyhdp"
            android:layout_marginRight="@dimen/tinyhdp"
            android:background="@drawable/write_radius_bg_shap"
            android:paddingLeft="@dimen/smallmdp"
            android:hint="请输入手机号"/>

        <Button
            android:id="@+id/user_login_registered_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/tinyhdp"
            android:layout_marginRight="@dimen/tinyhdp"
            android:background="@drawable/apply_for_selector"
            android:text="免费注册登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mediumxsp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tinymdp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/smallmdp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="我的关注"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/bank_activity_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_activity_num_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/hugesp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="银行活动"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:id="@+id/bank_make_money_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_make_money_num_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/hugesp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="银行理财"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:id="@+id/bank_loan_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_loan_num_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/hugesp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="银行贷款"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:id="@+id/browsing_history_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/browsing_history_num_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/hugesp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="浏览记录"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_feedback_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/smallmdp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="反馈"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/smallmdp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/smallmdp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke"/>
</LinearLayout>