<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/icon_with_msg_rel"
              android:layout_width="@dimen/mediumhdp"
              android:layout_height="@dimen/mediumhdp"
                android:background="?android:selectableItemBackground"
                android:clickable="true">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mediummxdp"
        android:src="@drawable/ic_law_focuse"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/message_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:background="@drawable/radio_red_bg_shap"
        android:text="12"
        android:textSize="@dimen/tinysp"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/tinymdp"
        android:paddingRight="@dimen/tinymdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/tinymdp"
        android:gravity="center"/>

</RelativeLayout>