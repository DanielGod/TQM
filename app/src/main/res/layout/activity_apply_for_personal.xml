<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/apply_for_company_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehdp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="申请成为："
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/mediumxsp"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/private_capital_radio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/mediummdp"
                        android:text="资方"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"
                        android:button="@drawable/choose_radio_btn"/>

                    <RadioButton
                        android:id="@+id/mediation_radio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/mediummdp"
                        android:text="个人中介"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"
                        android:button="@drawable/choose_radio_btn"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/write_radius_bg_shap"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/smallhdp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="称呼："
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/mediumxsp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:hint="公司名称"
                    android:textColor="@color/font_black_1"
                    android:textColorHint="@color/font_black_5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_user"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="联系人"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:maxLength="13"
                    android:hint="姓名"
                    style="@style/apply_edi"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:layout_marginTop="@dimen/smallmdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_phone"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="联系电话"
                    style="@style/apply_text"

                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/phone_num_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="联系电话"
                    android:maxLength="13"
                    android:inputType="phone"
                    android:maxLines="11"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:layout_marginTop="@dimen/smallmdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_idcard"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    style="@style/apply_text"
                    android:text="身份证号"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/id_num_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="身份证号"
                    android:maxLength="18"
                    android:inputType="number"
                    style="@style/apply_edi"
                    />
            </LinearLayout>




        </LinearLayout>


    </ScrollView>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:background="@drawable/apply_for_selector"
        android:layout_margin="@dimen/smallmdp"
        android:text="提交"
        android:textSize="@dimen/mediumxsp"
        android:textColor="@drawable/apply_for_text_color_selector"
        />
</LinearLayout>