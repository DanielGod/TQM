<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/hugehxxxxxxxxxdp"
              android:layout_height="wrap_content"
              android:id="@+id/apply_for_dialog_lin"
              android:orientation="vertical"
              android:background="@drawable/write_radius_bg_shap">


    <TextView
        android:layout_width="@dimen/hugehxxxxxxxxxdp"
        android:layout_height="@dimen/mediumhdp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="提交成功"
        android:textColor="@color/white"
        android:textSize="@dimen/bigsp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/apply_for_success"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mediumxsp"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:text="我们将在两个工作日内联系您"
        android:paddingLeft="@dimen/tinyhdp"
        android:paddingRight="@dimen/tinyhdp"
        android:lines="2"
        />

</LinearLayout>