<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ScrollView
        android:id="@+id/apply_statu_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--公司认证-->
            <LinearLayout
                android:id="@+id/apply_for_company_msg_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_name"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="公司名称"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_name_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:text="dasdasdasd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_for_type"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请成为"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_apply_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_user"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="联系人"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_user_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_time"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请时间"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_time_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--个人认证-->
            <LinearLayout
                android:id="@+id/apply_for_personal_msg_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_for_type"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请成为"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_apply_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_user"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="联系人"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_user_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_time"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请时间"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_time_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="0.8"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--信贷经理认证-->
            <LinearLayout
                android:id="@+id/apply_for_creditManager_msg_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_name"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="申请所在机构"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/creditManager_name_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:text="dasdasdasd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_user"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="联系人"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/creditManager_user_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_for_type"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="负责区域"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/creditManager_address_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_apply_time"/>

                    <TextView
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="申请时间"
                        />

                    <TextView
                        android:id="@+id/creditManager_time_edi"
                        style="@style/apply_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:background="@color/gray_light"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                >

                <View
                    android:layout_width="@dimen/tinymdp"
                    android:layout_height="@dimen/hugehxxdp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/tinyhdp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@color/colorPrimaryDark"
                    />

                <View
                    android:id="@+id/no_audit_view"
                    android:layout_width="@dimen/tinymdp"
                    android:layout_height="@dimen/hugehxxdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/tinyhdp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"

                    android:background="@color/font_black_5"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp">

                    <ImageView
                        android:layout_width="@dimen/tinyhdp"
                        android:layout_height="@dimen/tinyhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/tinymdp"
                        android:padding="3dp"
                        android:src="@drawable/ic_apply_true"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="已提交"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/hugehdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp">

                    <ImageView
                        android:layout_width="@dimen/tinyhdp"
                        android:layout_height="@dimen/tinyhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/tinymdp"
                        android:padding="3dp"
                        android:src="@drawable/ic_apply_true"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="审核中"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audit_end_lin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/hugehdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp">

                    <ImageView
                        android:id="@+id/audit_end_img"
                        android:layout_width="@dimen/tinyhdp"
                        android:layout_height="@dimen/tinyhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:padding="3dp"
                        android:src="@drawable/ic_apply_defaut"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                    <TextView
                        android:id="@+id/audit_end_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="暂无结果"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                        <TextView
                            android:id="@+id/audit_remark_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="抱歉，审核未通过！"
                            android:visibility="gone"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:textSize="@dimen/smallsp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:layout_margin="@dimen/smallmdp"
        android:background="@drawable/apply_for_selector"
        android:text="继续编辑"
        android:visibility="gone"
        android:textColor="@drawable/apply_for_text_color_selector"
        android:textSize="@dimen/mediumxsp"
        />

</LinearLayout>