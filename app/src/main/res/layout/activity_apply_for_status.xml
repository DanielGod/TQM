<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/apply_for_status_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehdp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:id="@+id/apply_statu_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/apply_for_company_msg_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_name"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="公司名称"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_name_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        style="@style/apply_text"
                        android:text="dasdasdasd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_for_type"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请成为"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_apply_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_user"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="联系人"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_user_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_time"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请时间"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/company_time_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        style="@style/apply_text"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/apply_for_personal_msg_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_for_type"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请成为"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_apply_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                          
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_user"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="联系人"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_user_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                          
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:layout_marginLeft="@dimen/smallmdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:background="@drawable/write_radius_bg_shap"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_time"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="申请时间"
                        style="@style/apply_text"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/mediummxdp"
                        android:layout_marginBottom="@dimen/mediummxdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:id="@+id/personal_time_edi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                          
                        style="@style/apply_text"
                        />
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hugehxxxxxxxxxdp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                >
                <View
                    android:layout_width="@dimen/tinymdp"
                    android:layout_height="@dimen/hugehdp"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/tinyxhdp"
                    />
                <View
                    android:id="@+id/no_audit_view"
                    android:layout_width="@dimen/tinymdp"
                    android:layout_height="@dimen/hugehdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/font_black_5"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/tinyxhdp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp">

                    <ImageView
                        android:layout_width="@dimen/smallhdp"
                        android:layout_height="@dimen/smallhdp"
                        android:padding="3dp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:src="@drawable/ic_apply_true"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="已提交"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/hugehdp">

                    <ImageView
                        android:layout_width="@dimen/smallhdp"
                        android:layout_height="@dimen/smallhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:padding="3dp"
                        android:src="@drawable/ic_apply_true"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="审核中"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audit_end_lin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mediummdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/hugehdp">

                    <ImageView
                        android:id="@+id/audit_end_img"
                        android:layout_width="@dimen/smallhdp"
                        android:layout_height="@dimen/smallhdp"
                        android:layout_marginLeft="@dimen/smallmdp"
                        android:padding="3dp"
                        android:src="@drawable/ic_apply_defaut"/>

                    <TextView
                        android:id="@+id/audit_end_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="暂无结果"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/no_audit_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/smallmdp"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:text="审核通知"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/mediumxsp"/>

                <TextView
                    android:id="@+id/audit_remark_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallmdp"
                    android:background="@drawable/radio_writesmoke_bg_shap"
                    android:padding="@dimen/smallmdp"
                    android:text="    很抱歉，您的审核信息未通过"
                    />

                <Button
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumhdp"
                    android:layout_margin="@dimen/smallmdp"
                    android:background="@drawable/apply_for_selector"
                    android:text="继续编辑"
                    android:textColor="@drawable/apply_for_text_color_selector"
                    android:textSize="@dimen/mediumxsp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>