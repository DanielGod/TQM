<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--品牌-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="@string/vehicle_models"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <TextView
                    android:id="@+id/vehicleEvaluation_choiceCar_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="选择车型"
                    style="@style/apply_edi"
                    android:layout_weight="2.1"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <!--申请城市-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="@string/vehicle_city"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/vehicleEvaluation_choiceProvince_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="选择省"
                    style="@style/apply_edi"
                    android:layout_weight="2"
                    android:digits=""
                    android:focusableInTouchMode="false"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/vehicleEvaluation_choiceCity_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:hint="选择市"
                    style="@style/apply_edi"
                    android:visibility="invisible"
                    android:digits=""
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_price"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="(万)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/vehicle_price_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="numberDecimal"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--贷款期限-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_firstRegistration"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="(月)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <TextView
                    android:id="@+id/vehicle_date_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    style="@style/apply_edi"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_mileage"
                        style="@style/apply_text"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="(万)"
                        android:textColor="@color/home_hotActivity_gray9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/tinymdp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/vehicle_mileage_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="numberDecimal"
                    android:hint="万里程"
                    android:maxLength="10"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_carId"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/vehicle_carId_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:inputType="text"
                    android:hint="@string/vehicle_carId"
                    android:maxLength="10"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_use"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/vehicle_purpose_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint=""
                    style="@style/apply_edi"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vehicle_condition"
                        style="@style/apply_text"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <AutoCompleteTextView
                    android:id="@+id/vehicle_carstatus_atv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint=""
                    style="@style/apply_edi"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="@string/vehicle_proposer"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/vehicle_name_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="姓名"
                    android:inputType="textPersonName"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <!--电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"

                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="@string/vehicle_contactay"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/vehicle_phone_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="电话"
                    android:inputType="phone"
                    android:maxEms="11"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallxhdp"
                android:background="@drawable/apply_for_selector"
                android:layout_margin="@dimen/smallmdp"
                android:text="提交评估"
                android:textSize="@dimen/mediumxsp"
                android:enabled="false"
                android:textColor="@drawable/apply_for_text_color_selector"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>