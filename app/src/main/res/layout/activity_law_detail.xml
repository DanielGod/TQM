<?xml version="1.0" encoding="utf-8"?>
<tqm.bianfeng.com.tqm.CustomView.MyScrollview
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hugehxxxxxdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/smallmdp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_user_head_img"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/smallmdp">
                <TextView
                    android:id="@+id/law_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/mediumxsp"
                    android:text="王冰冰"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/law_info_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/mediumsp"
                    android:text="教授     上海交通大学"
                    android:textColor="@color/font_black_1"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/mediumsp"
                        android:text="执业："
                        android:textColor="@color/font_black_2"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/law_year_txt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/mediumsp"
                        android:text="10年"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/law_address_txt"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/mediumsp"
                        android:text="上海宝山区"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mediummdp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hugehxxdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/law_call_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_law_call"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:padding="@dimen/smallmdp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="呼叫"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/whitesmoke"/>

            <LinearLayout
                android:id="@+id/law_focuse_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_law_focuse"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:padding="@dimen/smallmdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/whitesmoke"/>

            <LinearLayout
                android:id="@+id/law_certification_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_law_certification"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:padding="@dimen/smallmdp"
                    />

                <TextView
                    android:id="@+id/law_certification_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="已认证"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mediummdp"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"

                >

                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:layout_marginBottom="@dimen/mediummdp"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_law_from"/>

                <TextView
                    android:id="@+id/from_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mediummdp"
                    android:text="来源：上海交通大学"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/whitesmoke"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"

                >

                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:layout_marginBottom="@dimen/mediummdp"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_law_address"/>

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mediummdp"
                    android:text="地址：上海宝山区"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/whitesmoke"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"

                >

                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:layout_marginBottom="@dimen/mediummdp"
                    android:layout_marginTop="@dimen/mediummdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_law_phone"/>

                <TextView
                    android:id="@+id/phone_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mediummdp"
                    android:text="电话：1312312312423"
                    android:textColor="@color/font_black_1"
                    android:textSize="@dimen/smallsp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mediummdp"
            android:background="@color/whitesmoke"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tinyhdp"
                android:text="简介"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/white"
                android:background="@drawable/radio_colorprimry_shap"
                android:gravity="center"
                android:paddingLeft="@dimen/smallmdp"
                android:paddingRight="@dimen/smallmdp"
                android:layout_marginBottom="@dimen/mediummdp"
                />
            <TextView
                android:id="@+id/law_introduce_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:padding="@dimen/mediummdp"
                android:text="fjaknfafneklvnkjwnfvkjwnfd;kjvncqekjdvniewu;dfn uwjekfnvwkjndvnwkjfd"
                android:textColor="@color/font_black_1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mediummdp"
            android:background="@color/whitesmoke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tinyhdp"
                android:text="案件"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/white"
                android:background="@drawable/radio_colorprimry_shap"
                android:gravity="center"
                android:paddingLeft="@dimen/smallmdp"
                android:paddingRight="@dimen/smallmdp"
                android:layout_marginBottom="@dimen/mediummdp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/law_case_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</tqm.bianfeng.com.tqm.CustomView.MyScrollview>
