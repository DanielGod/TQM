<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loan_listitem_cardview"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/order_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="王先生"
            android:gravity="center_vertical"
            android:textSize="@dimen/mediumxsp"
            android:textColor="@color/home_hotActivity_gray3"
            />
        <TextView
            android:id="@+id/order_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="60"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="@dimen/mediumxsp"
            android:layout_marginLeft="@dimen/mediummdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="万元"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tinysp"
            />
        <TextView
            android:id="@+id/order_timeLimit_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/mediumxsp"
            android:layout_marginLeft="@dimen/mediummdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="月"
            android:textSize="@dimen/tinysp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/smallmdp"
            >
            <ImageView
                android:layout_width="@dimen/bigmdp"
                android:layout_height="@dimen/bigmdp"
                android:src="@drawable/ordercenter2"
                />
            <TextView
                android:id="@+id/order_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海市"
              style="@style/orderDetial_listitem"
                />
            <TextView
                android:id="@+id/order_identity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份"
                style="@style/orderDetial_listitem"
                />
            <TextView
                android:id="@+id/order_loanUser_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用途"
                style="@style/orderDetial_listitem"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/smallmdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:src="@drawable/ordercenter3"
                    />
                <TextView
                    android:id="@+id/order_incone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年收入"
                    style="@style/orderDetial_listitem"
                    />
                <TextView
                    android:id="@+id/order_yearincone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88000"
                    style="@style/orderDetial_listitem"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/smallmdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                >
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:src="@drawable/ordercenter5"
                    />
                <TextView
                    android:id="@+id/isHasHouse_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有房产"
                    style="@style/orderDetial_listitem"
                    />
                <TextView
                    android:id="@+id/isHasCar_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无房产"
                    style="@style/orderDetial_listitem"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/smallmdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="@dimen/bigmdp"
                    android:src="@drawable/ordercenter1"
                    />
                <TextView
                    android:id="@+id/order_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15670702612"
                    style="@style/orderDetial_listitem"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>