<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



        <RelativeLayout
            android:id="@+id/titleBar_relative"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/home_orange">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mediummdp"
                android:background="@drawable/back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="@color/white"
                android:textSize="@dimen/mediumxsp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_text"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/titleBar_relative"
        >
        <!--机构查询-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mediummdp"
                android:drawableLeft="@drawable/patrol_heading1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="type"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/class_arrow"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_text"
                />

            <CheckBox
                android:id="@+id/class_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mediummdp"
                android:background="@drawable/bank_filter_txt_sel"
                android:button="@null"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/filter_institution_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
        <!--产品类型-->
        <RelativeLayout
            android:id="@+id/filter_productType_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mediummdp"
                android:drawableLeft="@drawable/patrol_heading1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="type"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/class_arrow"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_text"
                />

            <CheckBox
                android:id="@+id/class_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mediummdp"
                android:background="@drawable/bank_filter_txt_sel"
                android:button="@null"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/filter_institution_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
        <!--风险等级-->
        <RelativeLayout
            android:id="@+id/filter_institution_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBar_relative"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mediummdp"
                android:drawableLeft="@drawable/patrol_heading1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="type"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/class_arrow"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_text"
                />

            <CheckBox
                android:id="@+id/class_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mediummdp"
                android:background="@drawable/bank_filter_txt_sel"
                android:button="@null"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/filter_institution_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_institution_relative"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_patrol_corners_blue_confirm"
            android:text="重置"
            android:textColor="@color/home_orange"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/home_orange"
            android:text="确定"

            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>