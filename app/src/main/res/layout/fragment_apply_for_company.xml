<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="申请成为："
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/mediumxsp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <RadioButton
                        android:id="@+id/private_capital_radio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/mediummdp"
                        android:text="民间机构"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"
                        android:button="@drawable/choose_radio_btn"/>

                    <RadioButton
                        android:id="@+id/mediation_radio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/mediummdp"
                        android:text="中介公司"
                        android:textColor="@color/font_black_1"
                        android:textSize="@dimen/mediumsp"
                        android:button="@drawable/choose_radio_btn"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_name"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="公司名称"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>

                <EditText
                    android:id="@+id/company_name_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="公司名称"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_address"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="公司地址"
                    style="@style/apply_text"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/select_address_provinces"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    android:textSize="@dimen/smallsp"
                    android:gravity="center"
                    android:hint="选择省"
                    android:textColorHint="@color/font_black_2"
                    android:digits=""
                    android:background="@drawable/radio_writesmoke_bg_shap"
                    android:layout_margin="@dimen/smallmdp"
                    android:dropDownHeight="@dimen/hugehxxxxxxxxxdp"
                    android:focusableInTouchMode="false"
                    />
                <AutoCompleteTextView
                    android:id="@+id/select_address_city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    android:textSize="@dimen/smallsp"
                    android:gravity="center"
                    android:hint="选择市"
                    android:textColorHint="@color/font_black_2"
                    android:visibility="invisible"
                    android:digits=""
                    android:background="@drawable/radio_writesmoke_bg_shap"
                    android:layout_margin="@dimen/smallmdp"
                    android:dropDownHeight="@dimen/hugehxxxxxxxxxdp"
                    android:focusableInTouchMode="false"
                    />
                <AutoCompleteTextView
                    android:id="@+id/select_address_County"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    android:textSize="@dimen/smallsp"
                    android:gravity="center"
                    android:hint="选择区"
                    android:textColorHint="@color/font_black_2"
                    android:visibility="invisible"
                    android:digits=""
                    android:background="@drawable/radio_writesmoke_bg_shap"
                    android:layout_margin="@dimen/smallmdp"
                    android:dropDownHeight="@dimen/hugehxxxxxxxxxdp"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_user"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"

                    android:text="联系人"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/company_user_name_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="姓名"
                    android:maxLines="9"
                    style="@style/apply_edi"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/bigmdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_apply_phone"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="联系电话"
                    style="@style/apply_text"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/mediummxdp"
                    android:layout_marginBottom="@dimen/mediummxdp"
                    android:layout_marginRight="@dimen/smallmdp"
                    android:background="@color/gray_light"/>
                <EditText
                    android:id="@+id/company_phone_num_edi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:hint="公司电话"
                    android:inputType="phone"
                    android:maxLines="11"
                    style="@style/apply_edi"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:layout_marginBottom="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_logo"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/smallhdp"
                        android:text="公司logo"
                        style="@style/apply_text"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/smallhdp"
                        android:text="(图片尺寸16：9)"
                        style="@style/apply_text"
                        android:textSize="@dimen/smallsp"
                        android:textColor="@color/font_black_2"/>

                    <ImageView
                        android:layout_width="@dimen/activity_horizontal_margin"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_upload"/>
                    <TextView
                        android:id="@+id/upload_logo_img_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="上传"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/smallmdp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/mediumsp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/logo_img1"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:visibility="gone"
                        android:src="@drawable/placeholder"
                        />

                    <ImageView
                        android:id="@+id/add_logo_img_img"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/default_add_img"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_aompany_img"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/smallhdp"
                        android:text="公司照片"
                        style="@style/apply_text"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/smallhdp"
                        android:text="(至多上传3张)"
                        style="@style/apply_text"
                        android:textSize="@dimen/smallsp"
                        android:textColor="@color/font_black_2"/>
                    <ImageView
                        android:layout_width="@dimen/activity_horizontal_margin"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_upload"/>
                    <TextView
                        android:id="@+id/upload_company_img_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="上传"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/smallmdp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/mediumsp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/company_img1"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/placeholder"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/company_img2"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/placeholder"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/company_img3"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:visibility="gone"
                        android:src="@drawable/placeholder"/>

                    <ImageView
                        android:id="@+id/add_company_img_img"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/default_add_img"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/smallmdp"
                android:layout_marginRight="@dimen/smallmdp"
                android:layout_marginTop="@dimen/smallmdp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/write_radius_bg_shap"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smallhdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/bigmdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_apply_personal_img"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/smallhdp"
                        android:text="个人照片"
                        style="@style/apply_text"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/smallhdp"
                        android:text="(请上传工牌和名片)"
                        style="@style/apply_text"
                        android:textSize="@dimen/smallsp"
                        android:textColor="@color/font_black_2"/>
                    <ImageView
                        android:layout_width="@dimen/activity_horizontal_margin"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_upload"/>
                    <TextView
                        android:id="@+id/upload_personal_img_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="上传"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/smallmdp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/mediumsp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hugehdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/smallmdp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/personal_img1"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/placeholder"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/personal_img2"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/placeholder"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/add_personal_img_img"
                        android:layout_width="@dimen/hugehdp"
                        android:layout_height="@dimen/hugehdp"
                        android:layout_marginRight="@dimen/smallmdp"
                        android:src="@drawable/default_add_img"
                        />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    </ScrollView>
</LinearLayout>