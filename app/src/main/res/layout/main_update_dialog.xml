<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_300"
    >
    <ImageView
        android:id="@+id/updateDialog_image_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/update3"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/updateDialog_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:textSize="@dimen/bigsp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateDialog_version_tv"
        android:layout_above="@+id/bottomButton_lin"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/updateDialog_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomButton_lin"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/updateDialog_unUpdate_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/update4"
                android:padding="@dimen/mediummxdp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/updateDialog_immediatelyUpdate_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/update5"
            android:padding="@dimen/mediummxdp"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </LinearLayout>